number = {3},
pages = {553--562},
publisher = {Blackwell Publishing Ltd},
title = {{Rumen microbial diversity in Svalbard reindeer, with particular emphasis on methanogenic archaea}},
url = {http://dx.doi.org/10.1111/j.1574-6941.2009.00750.x},
volume = {70},
