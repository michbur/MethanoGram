journal = {Microbiology (Reading, England)},
keywords = {Bacterial,Bacterial Proteins,Bacterial Proteins: genetics,Bacterial Proteins: metabolism,Desulfovibrio,Desulfovibrio: genetics,Desulfovibrio: growth {\&} development,Desulfovibrio: metabolism,Gene Expression Regulation,Hydrogen,Hydrogen: metabolism,Lactic Acid,Lactic Acid: metabolism},
