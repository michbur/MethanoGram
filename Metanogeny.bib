issn = {0006-3002},
journal = {Biochimica et biophysica acta},
keywords = {Chromatography,Glutamates,Glutamates: metabolism,High Pressure Liquid,Intramolecular Transferases,Intramolecular Transferases: metabolism,Lysine,Lysine: analogs {\&} derivatives,Lysine: metabolism,Magnetic Resonance Spectroscopy,Methanococcus,Methanococcus: chemistry,Methanococcus: growth {\&} development,Osmolar Concentration,Osmotic Pressure,Potassium,Potassium: analysis,Sodium Chloride,Sodium Chloride: chemistry,Sodium Chloride: pharmacology,Time Factors},
month = {nov},
number = {1},
pages = {1--10},
title = {{Switching osmolyte strategies: response of Methanococcus thermolithotrophicus to changes in external NaCl.}},
