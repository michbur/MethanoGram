number = {6},
pages = {1363--1373},
title = {{Metabolic Activity of Fatty Acid-Oxidizing Bacteria and the Contribution of Acetate, Propionate, Butyrate, and CO2 to Methanogenesis in Cattle Waste at 40 and 60{\{}degrees{\}}C}},
